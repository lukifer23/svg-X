{
  "name": "svg-bolt",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "description": "A desktop application for converting images to SVG with customizable tracing options",
  "author": "SVG Bolt Team",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "vite build && electron-builder build --publish never",
    "preelectron:build": "node create-electron-cjs.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "potrace": "^2.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stackblur-canvas": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.svgbolt.app",
    "productName": "SVG Bolt",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "icon.png"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
